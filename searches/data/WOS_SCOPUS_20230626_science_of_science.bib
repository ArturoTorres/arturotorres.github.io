@article{ WOS:000726780900004,
Author = {Jaramillo, Ana Maria and Macedo, Mariana and Menezes, Ronaldo},
Title = {REACHING TO THE TOP: THE GENDER EFFECT IN HIGHLY-RANKED ACADEMICS IN
   COMPUTER SCIENCE},
